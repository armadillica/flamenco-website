doctype
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href="{{ '/static/styles.css'|asseturl }}")
		title {% block title %}Hello{% endblock %} | Flamenco Render Manager
	body
		nav.navbar.navbar-inverse.navbar-static-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="{{ '/'|url }}") Flamenco
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						| {% for id, item in bag('menu').iteritems() %}
						li.active
							a(href='{{ item.path|url }}') {{ item.label }}
						| {% endfor %}
		.body-wrapper
			| {% block outerbody %}
			.container
				| {% block body %}{% endblock %}
			| {% endblock %}
		| {% block bottomsummary %}
		.bottomsummary
			.container
		| {% endblock %}
		| {% block footer %}
		footer
			.container
				.row
					.col-sm-4.icon-bar
						a(href='https://github.com/lektor/lektor/', title='Flamenco on GitHub')
							i.fa.fa-github
						a(href='https://github.com/lektor/lektor/issues/', title='Report Issues for Flamenco')
							i.fa.fa-bug
						a(href='https://twitter.com/getlektor', title='Find Flamenco on Twitter')
							i.fa.fa-twitter
						a(href='https://gitter.im/lektor/lektor', title='Chat on Gitter')
							i.fa.fa-comment
						| {%- if this.path %}
						a(href="https://github.com/lektor/lektor-website/tree/master/content{{ this.path.split('@')[0]\
						}}/contents.lr", title='View source for this page')
							i.fa.fa-code
						| {%- endif %}
					.col-sm-8
						a(href="{{ '/license'|url }}") License &amp; Copyright
						| •
						a(href="{{ '/contact'|url }}") Contact
						| •
						| Made at the Blender Institute
		| {% endblock %}

		script(type='text/javascript', src="{{ '/static/app.js'|asseturl }}", charset='utf-8')
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-70822533-1', 'auto');
			ga('send', 'pageview');

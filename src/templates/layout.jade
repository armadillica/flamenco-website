doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		// The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
		meta(name='description', content='')
		meta(name='author', content='')
		link(rel='icon', href="{{ '/favicon.ico'|asseturl }}")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,700|Roboto+Mono")
		title.
			Flamenco - {% block title %}Free and Open Source Render Manager{% endblock %}
		// Bootstrap core CSS
		link(rel='stylesheet', href="{{ '/css/vendor/bootstrap.min.css'|asseturl }}")
		// IE10 viewport hack for Surface/desktop Windows 8 bug
		// link(href='../../assets/css/ie10-viewport-bug-workaround.css', rel='stylesheet')
		// Custom styles for this template
		link(rel='stylesheet', href="{{ '/css/main.css'|asseturl }}")
		// script(src='../../assets/js/ie-emulation-modes-warning.js')
		// HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
		//if lt IE 9
			script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
			script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
	body
		#wrap
			#main
				nav.navbar.navbar-fixed-top
					.container
						.navbar-header
							button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
								span.sr-only Toggle navigation
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand(href="{{ '/'|url }}") Flamenco
						#navbar.collapse.navbar-collapse
							ul.nav.navbar-nav
								| {% for id, item in bag('menu').iteritems() %}
								// class active
								li
									a(href='{{ item.path|url }}') {{ item.label }}
								| {% endfor %}   
						// /.nav-collapse
				| {% block outerbody %} {% endblock %}
				| {% block body %} {% endblock %}
				// /.container
		footer(class="footer")
			.container 
				.row
					span
						strong Flamenco
					span
						a(href='https://blender.institute') Made at the Blender Institute
					span
						a(href='https://github.com/armadillica/flamenco/blob/master/LICENSE.txt') License
		script(href="{{ '/js/vendor/jquery.min.js'|asseturl }}")
		script(href="{{ '/js/vendor/bootstrap.min.js'|asseturl }}")
